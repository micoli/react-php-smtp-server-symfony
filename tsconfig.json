{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": false
  },
  "include": ["./assets/**/*"],
  "exclude": ["./node_modules", "**/*.spec.ts"]
}
